<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
   
<mapper namespace="com.ekoo.springdemo.mapper.UserMapper">  
    <insert id="insertUser" parameterType="com.ekoo.springdemo.bean.User" useGeneratedKeys="true" keyColumn="id">  
       insert into user(name, age) values(#{name}, #{age})  
    </insert>  
     
    <update id="updateUser" parameterType="com.ekoo.springdemo.bean.User">  
       update user set name=#{name}, age=#{age} where id=#{id}  
    </update>  
     
    <select id="findById" parameterType="int" resultType="com.ekoo.springdemo.bean.User">  
       select * from user where id=#{id}  
    </select>  
     
    <delete id="deleteUser" parameterType="int">  
       delete from user where id=#{id}  
    </delete>  
</mapper>  